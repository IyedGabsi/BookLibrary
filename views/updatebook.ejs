<%- include('parts/top') %>
<br><br><br><br><br><br>
<div class="container">
    <form method="POST" action="/mybooks/update" enctype="multipart/form-data">
        <div class="form-group">
          <label >Book Title</label>
          <input type="text" class="form-control" name="title" value="<%=bookUpdate.title%>">
         
        </div>
        <div class="form-group">
            <label >Descrption</label>
            <textarea type="text" class="form-control" name="discription"> 
                <%= bookUpdate.discription%>
            </textarea>
            
        </div>
        
        <input type="hidden" name="bookid" value="<%=bookUpdate._id%>">
        <div class="form-group">
          <label >Author</label>
          <input type="text" class="form-control" name="author" value="<%=bookUpdate.author%>">
          
        </div>
        <div class="form-group">
            <label >Price</label>
            <input type="text" class="form-control" name="price" value="<%=bookUpdate.price%>">
            
        </div>
        <input type="hidden" name="oldimage" value="<%=bookUpdate.image%>">
        <img src="/uploads/<%=bookUpdate.image%>" width="100" height="100">
        <div class="form-group">
            <label >Image</label>
            <input type="file" accept=".jpg,.png,.jpeg" name="image" class="form-control" >
            
        </div>
          <% if(smessage) {%>
            <div class="alert alert-success">
              <%=smessage%>
            </div>
            <%}%>
            <% if(emessage) {%>
              <div class="alert alert-danger">
                <%=emessage%>
              </div>
            <%}%>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
</div>



<%- include('parts/buttom') %>